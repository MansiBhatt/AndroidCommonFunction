<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.github.skydoves.ElasticButton
        android:id="@+id/btn_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:button_backgroundColor="@color/colorPrimary"
        app:button_labelSize="14"
        app:button_labelText="@string/bar_chart" />

    <com.github.skydoves.ElasticButton
        android:id="@+id/btn_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:button_backgroundColor="@color/colorPrimary"
        app:button_labelSize="14"
        app:button_labelText="@string/pie_chart" />

    <com.github.skydoves.ElasticButton
        android:id="@+id/btn_line_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:button_backgroundColor="@color/colorPrimary"
        app:button_labelSize="14"
        app:button_labelText="@string/line_chart" />

</LinearLayout>