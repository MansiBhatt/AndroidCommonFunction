<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <com.github.skydoves.ElasticButton
        android:id="@+id/btn_strawberry1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:button_backgroundColor="@color/colorPrimary"
        app:button_labelSize="14"
        app:button_labelText="@string/strawberry1" />

    <com.github.skydoves.ElasticButton
        android:id="@+id/btn_strawberry2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:button_backgroundColor="@color/colorPrimary"
        app:button_labelSize="14"
        app:button_labelText="@string/strawberry2" />

    <com.github.skydoves.ElasticButton
        android:id="@+id/btn_strawberry3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:button_backgroundColor="@color/colorPrimary"
        app:button_labelSize="14"
        app:button_labelText="@string/strawberry3" />

    <com.github.skydoves.ElasticButton
        android:id="@+id/btn_strawberry4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:button_backgroundColor="@color/colorPrimary"
        app:button_labelSize="14"
        app:button_labelText="@string/strawberry4" />

    <com.github.skydoves.ElasticButton
        android:id="@+id/btn_strawberry5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:button_backgroundColor="@color/colorPrimary"
        app:button_labelSize="14"
        app:button_labelText="@string/strawberry5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="3">

        <com.github.skydoves.ElasticButton
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_weight="1"
            app:button_backgroundColor="@color/colorPrimaryDark"
            app:button_labelSize="14"
            app:button_labelText="@string/btn_prev" />

        <com.github.skydoves.ElasticButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_weight="1"
            app:button_backgroundColor="@color/colorPrimaryDark"
            app:button_labelSize="14"
            app:button_labelText="@string/btn_next" />

        <com.github.skydoves.ElasticButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:button_backgroundColor="@color/colorPrimaryDark"
            app:button_labelSize="14"
            app:button_labelText="@string/btn_home" />


    </LinearLayout>
</LinearLayout>