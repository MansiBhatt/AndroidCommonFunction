<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/strawberry1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/s_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_id" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_s_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_id"
                android:inputType="number"
                android:maxLength="4" />


            <TextView
                android:id="@+id/s_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_weight" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_s_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_weight"
                android:inputType="number"
                android:maxLength="5" />

            <TextView
                android:id="@+id/s_sunlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_sunlight" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_s_sunlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_sunlight"
                android:inputType="number"
                android:maxLength="1" />

            <TextView
                android:id="@+id/s_compost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_compost" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_s_compost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_compost"
                android:inputType="number"
                android:maxLength="4" />

            <TextView
                android:id="@+id/s_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_water" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_s_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_water"
                android:inputType="number"
                android:maxLength="3" />

            <com.github.skydoves.ElasticButton
                android:id="@+id/btn_save_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                app:button_backgroundColor="@color/colorPrimary"
                app:button_labelSize="14"
                app:button_labelText="@string/btn_save_log" />

            <com.github.skydoves.ElasticButton
                android:id="@+id/btn_show_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                app:button_backgroundColor="@color/colorPrimary"
                app:button_labelSize="14"
                app:button_labelText="@string/btn_show_log" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.github.skydoves.ElasticButton
                    android:id="@+id/btn_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:layout_weight="1"
                    app:button_backgroundColor="@color/colorPrimary"
                    app:button_labelSize="14"
                    app:button_labelText="@string/btn_prev" />

                <com.github.skydoves.ElasticButton
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:layout_weight="1"
                    app:button_backgroundColor="@color/colorPrimary"
                    app:button_labelSize="14"
                    app:button_labelText="@string/btn_next" />

                <com.github.skydoves.ElasticButton
                    android:id="@+id/btn_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:button_backgroundColor="@color/colorPrimary"
                    app:button_labelSize="14"
                    app:button_labelText="@string/btn_home" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
